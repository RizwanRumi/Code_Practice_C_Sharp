<Window x:Class="WPFTutorial.View.UserControls.ModalWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WPFTutorial.View.UserControls"
        mc:Ignorable="d" WindowStyle="None" WindowStartupLocation="CenterOwner"
        Title="ModalWindow" Height="300" Width="300">
    <Grid>
        <StackPanel VerticalAlignment="Center">
            <TextBox x:Name="txtInput" Height="40" Width="200" FontSize="16" Margin="5" TextChanged="txtInput_TextChanged"/>
            
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnOK" Height="40" Width="50" Content="OK" Margin="2" Click="btnOK_Click" IsEnabled="False"/>
                <Button x:Name="btnCancel" Height="40" Width="50" Content="Cancel" Margin="2" Click="btnCancel_Click" />
            </StackPanel>

        </StackPanel>
    </Grid>
</Window>
